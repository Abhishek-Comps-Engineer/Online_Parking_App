<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AdminNeoPark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Customize BottomNavigationView appearance here, like background, item icon tint, etc. -->
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
    </style>

    <!-- Main theme that extends base -->
    <style name="Theme.AdminNeoPark" parent="Base.Theme.AdminNeoPark" />
</resources>
